@model UniversitySystem.Models.Department
@{
    ViewBag.Title = "Save Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="UTF-8">

</head>
<body>
    <h3 style="margin-left: 18%">Save Department</h3>
    <div style="margin-top: 5%">
        <form id="saveDepartment" class="form-horizontal" method="POST">
            <div class="form-group">
                <label for="deptCode" class="col-sm-2">Department Code</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="deptCode" placeholder="Department Code" name="DepartmentCode">
                </div>
            </div>
            <div class="form-group">
                <label for="deptName" class="col-sm-2">Department Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="deptName" placeholder="Department Name" name="DepartmentName">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" id="saveDeptButton" class="btn btn-info" onclick="DepartmentCheck()">Save</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
